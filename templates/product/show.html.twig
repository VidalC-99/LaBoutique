{% extends 'base.html.twig' %}

{% block title %}{{ productdetail.name}} - La Boutique{% endblock %}

{% block content %}
    
    <div class="row">
        <div class="col-md-5">
        <img src="/upload/images/products/{{ productdetail.illustration }}" alt="{{ productdetail.name }}" class="img-fluid">
        </div>
        <div class="col-md-7 my-auto">
            <h3>{{ productdetail.name }}</h3>
            <p>{{ productdetail.subtitle }}</p>
            <span class="product-page-price">{{ (productdetail.price /100)|number_format(2, ',', '.') }}€</span>
            <hr>
            <p>{{ productdetail.description }}</p>

            <a href="{{ path('add_to_cart', {'id' : productdetail.id }) }}" class="btn btn-primary">Ajouter au panier</a>
        </div>
    </div>

    <hr>
    <h2>Nos meilleurs produits</h2>
    <p >Découvrez nos meilleurs articles juste ici !!</p>
    <div class="row">

        {% for product in product %}
            <div class="col-lg-3">
                {% include 'product/single_product.html.twig'%}
            </div><!-- /.col-lg-4 -->
        {% endfor %}

    </div><!-- /.row -->

{% endblock %}